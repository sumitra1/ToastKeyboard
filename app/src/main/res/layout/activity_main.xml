<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:background="@drawable/btnb"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btnq"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Q" />

                <Button

                    android:id="@+id/btnw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="W" />

                <Button
                    android:id="@+id/btne"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E"
                    android:background="@drawable/btn"/>

                <Button
                    android:id="@+id/btnr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="R" />

                <Button
                    android:id="@+id/btnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="T" />

                <Button
                    android:id="@+id/btny"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="Y" />
                <Button
                    android:id="@+id/btnu"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="U" />

                <Button
                    android:id="@+id/btni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"

                    android:text="I" />
                <Button
                    android:id="@+id/btno"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="O" />

                <Button
                    android:id="@+id/btnp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="P" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btna"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A" />

                <Button
                    android:id="@+id/btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="S" />

                <Button
                    android:id="@+id/btnd"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D" />

                <Button
                    android:id="@+id/btnf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="F" />

                <Button
                    android:id="@+id/btng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="G" />

                <Button
                    android:id="@+id/btnh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="H" />
                <Button
                    android:id="@+id/btnj"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="J" />

                <Button
                    android:id="@+id/btnk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="K" />
                <Button
                    android:id="@+id/btnl"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="L" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnz"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Z" />

                <Button
                    android:id="@+id/btnx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="X" />

                <Button
                    android:id="@+id/btnc"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C" />

                <Button
                    android:id="@+id/btnv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="V" />

                <Button
                    android:id="@+id/btnb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="B" />

                <Button
                    android:id="@+id/btnn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:text="N" />
                <Button
                    android:id="@+id/btnm"
                    android:layout_weight="1"
                    android:background="@drawable/btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="M" />



            </LinearLayout>
        </LinearLayout>


</LinearLayout>